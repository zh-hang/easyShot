            <Button Content="保存" HorizontalAlignment="Left" Margin="10,243.6,0,0" VerticalAlignment="Top" Width="78.2" Height="23.44" FontFamily="Times New Roman" FontSize="16" Click="Save_Click"/>
            <TextBox x:Name="PathBox" HorizontalAlignment="Left" Height="22.44" Margin="130,46.8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230.8" FontFamily="Times New Roman" FontSize="16"/>
            <TextBlock Foreground="Black" HorizontalAlignment="Left" Margin="10,74.24,0,0" TextWrapping="Wrap" Text="截图时隐藏" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
            <CheckBox x:Name="HideCheck" Content="是" HorizontalAlignment="Left" Margin="130,77.063,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.021,-1.378" Height="18.4" Width="81.595" FontSize="14" FontFamily="Times New Roman"/>
        </Grid>
    </Grid>
</Page>
